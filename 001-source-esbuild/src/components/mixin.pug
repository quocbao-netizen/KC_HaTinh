                        a(href="") 
                            span EN
mixin MenuSection(arr)
    .swiper-column-auto(class="relative")
        .swiper(class="border-b border-utility-200")
            ul.swiper-wrapper.featured-menu
                each item, i in arr 
                    li.item.swiper-slide(class=`!w-auto !mr-0 ${i===0&&"active"}`)
                        a(href="#!" class="py-1.75 border-b-[2px] border-transparent text-base text-utility-700 font-bold whitespace-nowrap transition-500 select-none hover:border-primary-1 hover:text-primary-1")=item
        +BtnSlide("next")(class="btn-next absolute top-1/2 z-3 -translate-y-1/2 right-0 w-7.5 h-7.5 !text-xs bg-primary-1")
mixin ProductItem()
    .product-item(class="h-full w-full relative bg-white border border-transparent transition-500 group hover:border-primary-2") 
        .product-tag(class="absolute left-0 top-0 flex flex-col gap-y-2.75 p-5 z-1 items-start")
            .update(class="py-1.5 px-2 text-sm text-white bg-primary-1") Mới
            .discount(class="py-1.5 px-2 text-sm text-white bg-primary-2") Giảm 12%
        .product-thumb 
            a(href="#!" class="img-ratio") 
                +PugImg('./img/product/product-1.svg')(class='')
        .product-info(class="flex flex-col items-start gap-y-3 p-6 pt-5")
            h3.product-name(class="text-xl text-utility-950 font-bold line-clamp-2 leading-[1.4] transition- group-hover:text-primary-2")
                a(href="#!") Đạm Vàng Đầu Trâu 
            .price(class="flex-between w-full")
                .price-new(class="text-xl text-primary-2") 300.000đ
                .price-old(class="text-sm text-utility-300 line-through") 500.000đ
            button.btn-addcart(class="flex-y-center gap-x-2 px-4 py-2.5 text-primary-1 rounded-full border border-primary-1") 
                span(class="text-sm font-bold") Thêm vào giỏ hàng
                i(class="fa-regular fa-cart-plus text-lg")
