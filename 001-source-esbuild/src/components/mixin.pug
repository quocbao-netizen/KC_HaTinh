mixin PugImg(url="./img/1.jpg")
    img(data-src=url, alt="", class="lozad " + attributes.class)
mixin btnViewAll(text="Xem thêm")
    a(href="" x-link class='btn-primary-2 btn ' + attributes.class)
        span=text
        img(src=imgButton, alt="", class="w-5 h-5 svg")
mixin HeaderLanguageVertical()
    ul 
        li.wpml-ls-item
            a(href="") 
                span.wpml-ls-native VN
        ul 
            li 
                a(href="") 
                    span EN
mixin HeaderLanguageHorizontal()
    ul 
        li.wpml-ls-item
            a(href="") 
                +PugImg("./img/language/vi.svg")
                span.wpml-ls-native VN
        li.wpml-ls-item
            a(href="") 
                +PugImg("./img/language/en.svg")
                span.wpml-ls-native EN
mixin BtnPrimary(text="")
    a.btn.primary(href="" class=attributes.class)
        .block-content
            span=text
            i(class="fa-regular fa-arrow-up-right")
mixin BtnSlide(type="next")
    button(class="btn w-10 h-10 rounded-full bg-[rgba(0,0,0,0.36)] text-2xl transition-all duration-[0.4s] hover:bg-primary-2 " + attributes.class)
        if type==="next"
            i(class="fa-regular fa-angle-right text-white")
        else if type==="prev"
            i(class="fa-regular fa-angle-left text-white")
mixin HeaderMenu()
    .header-menu(class="flex-between gap-base")
        .swiper-column-auto(class="w-full")
            .swiper 
                ul.swiper-wrapper 
                    -var menu = ['Giới thiệu','Sản phẩm','Dịch vụ', 'TIN TỨC & SỰ KIỆN','MEDIA & COMMUNICATION','LIÊN HỆ', 'NỘI BỘ']
                    each item in menu
                        li.swiper-slide(class="!w-auto !mr-0")
                            .menu-item-has-children
                                a(href="#!" class="block border-b-[2px] border-transparent transition-500 hover:border-primary-2")=item
        .block-cart 
            .btn-cart(class="relative w-10 h-10 rounded-full bg-primary-4 flex-center cursor-pointer")
                i(class="fa-solid fa-cart-shopping text-xl text-white") 
                .count-cart(class="absolute -right-2 -top-2 w-5 h-5 rounded-full flex-center bg-primary-2 text-white rem:text-[14px] font-medium") 0
mixin HeaderLanguage()
    .header-language 
        .header-language-active
            ul 
                li.wpml-ls-current-language
                    a(href="") 
                        span.wpml-ls-native VN
                ul 
                    li 
                        a(href="") 
                            span EN
        .header-language-list
            ul 
                li.wpml-ls-current-language
                    a(href="") 
                        span.wpml-ls-native VN
                ul 
